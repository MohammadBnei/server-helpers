#!/bin/bash

# This script simplifies the execution of the create_k8s_secret.yml Ansible playbook.
# It passes all arguments directly to ansible-playbook.

SCRIPT_DIR=$(dirname "$0")
ANSIBLE_DIR="./ansible"
PLAYBOOK="playbooks/create_k8s_secret.yml"

echo "Running Ansible playbook: ${PLAYBOOK}"
echo "Arguments: $@"

cd "${ANSIBLE_DIR}" || { echo "Failed to change directory to ${ANSIBLE_DIR}"; exit 1; }

ansible-playbook "${PLAYBOOK}" "$@"
