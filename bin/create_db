#!/bin/bash

# This script simplifies the execution of the create_pg_db.yml Ansible playbook.
# It passes all arguments directly to ansible-playbook.

SCRIPT_DIR=$(dirname "$0")
ANSIBLE_DIR="${SCRIPT_DIR}/../ansible"
PLAYBOOK="${ANSIBLE_DIR}/playbooks/create_pg_db.yml"

echo "Running Ansible playbook: ${PLAYBOOK}"
echo "Arguments: $@"

cd "${ANSIBLE_DIR}" || { echo "Failed to change directory to ${ANSIBLE_DIR}"; exit 1; }

ansible-playbook "${PLAYBOOK}" "$@"
